<div class="shipping-main-wrapper"">
  <div class="shipping-page-container">
  <div class="shipping-heading">
    <h1>Shipping Details</h1>
  </div>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="form">
          <%= simple_form_for([current_user.profile, @shipping_address], defaults: { input_html: { class: 'form-control' }}) do |f| %>
          <%= f.error_notification %>
          <div class="form-group">
            <%= f.input :number, label: 'Number' %>
          </div>
          <div class="form-group">
            <%= f.input :street %>
          </div>
          <div class="form-group">
            <%= f.input :suburb %>
          </div>
          <div class="form-group">
            <%= f.input :post_code %>
          </div>
          <div class="form-group">
            <%= f.input :city %>
          </div>
          <div class="form-group">
            <%= f.input :state %>
          </div>
          <div class="form-group">
            <%= f.input :special %>
          </div>
            <div class="ctas-shipping-page">
              <div class="update-address">
                <button class="btn-default small-submit-button" type="button"><%= f.button :submit %></button>
              </div>
              <div class="submit-path">
                <%= link_to orders_path, method: :post do %>
                <%= submit_tag 'CHECKOUT', class: 'btn-group-lg btn-danger btn-lg small-submit-button'%>
                <% end %>
              </div>
            </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
