<div class="devise-wrapper">
  <div class="container sign-up-container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 offset-4">
        <h1 class="devise-header">Log into KelX</h1>
        <div class="form devise-form">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-control' }}) do |f| %>
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
        </div>

                <div class="link devise-link">
                <%= render "devise/shared/links" %>
                </div>
          <div class="wrapper-form-button row">
            <div class="form-action col-md-3">
            <%= link_to "Back", root_path, class: 'btn btn-default' %>
            </div>
            <div class="form-action2 col-md-9 btn">
              <%= f.button :submit, "Log in" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

