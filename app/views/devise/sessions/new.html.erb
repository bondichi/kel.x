<h2>Log in</h2>

<div class="main-wrapper">
  <div class="container" style="margin-top: 105px; margin-bottom: 80px; width: 1112px; background-color: white; box-shadow: 0 0.2px 0.1px">
    <div class="row">
      <div class="col-xs-12 col-sm-4 offset-4">
        <h1 style="font-size: 44px;">PROFILE UPDATE</h1>
        <div class="form" style="margin-top: 29px; margin-bottom: 29px;">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-control' }}) do |f| %>
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
        </div>
                <div class="remember-me" style="margin-left: 23px">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
          <div class="wrapper-form-button row">
            <div class="form-action col-md-3">
            <%= link_to "Back", root_path, class: 'btn btn-default' %>
            </div>
            <div class="form-action2 col-md-9">
              <%= f.button :submit, "Log in" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<div class="link" style="text-align: center">
<%= render "devise/shared/links" %>
</div>
