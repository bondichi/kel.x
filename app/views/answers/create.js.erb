function hide() {
	question.classList.add('invisible');
};

question = document.getElementById('form_wrapper_<%= @question_id %>');
progress = document.getElementById('survey-progress');
progress.innerText = '<%= (@survey.questions.count - @survey_response.unanswered_questions.count) + 1 %> / <%= @survey.questions.count %>';

question.classList.add('animated');
question.classList.add('fadeOutUp');
setTimeout(hide, 800);


if (<%= @last_question%>) {

  window.location.replace('/products');

};
