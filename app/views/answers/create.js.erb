function hide() {
  const question = document.getElementById('form_wrapper_<%= @question_id %>');

	question.classList.add('invisible');
};

function updateNumber() {
  const question = document.getElementById('form_wrapper_<%= @question_id %>');
  const progress = document.getElementById('survey-progress');
  const surveyQuestion = <%= @survey.questions.count %>;
  const surveyUnanswer = <%= @survey_response.unanswered_questions.count %>;

  if (surveyUnanswer > 0) {
    progress.innerText = `${surveyQuestion - surveyUnanswer + 1} / ${ surveyQuestion }`;
  }

  question.classList.add('animated');
  question.classList.add('fadeOutUp');
}

updateNumber();
setTimeout(hide, 800);


if (<%= @last_question %>) {

  window.location.replace('/products');

};
