function hide() {
	question.classList.add('invisible');
};

question = document.getElementById('form_wrapper_<%= @question_id %>');
progress = document.getElementById('survey-progress');
progress.innerText = 'Completed <%= @survey.questions.count - @survey_response.unanswered_questions.count %> of <%= @survey.questions.count %> Questions';

question.classList.add('animated');
question.classList.add('fadeOutRight');
setTimeout(hide, 800);


if (<%= @last_question%>) {

  window.location.replace('/products');

};
