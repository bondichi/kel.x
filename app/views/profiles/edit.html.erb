<div class="main-wrapper"">
  <div class="container ">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <div class="form">
          <%= simple_form_for(@profile) do |f| %>
          <%= f.error_notification %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :age %>
          <%= f.input :gender %>
          <%= f.input :occupation %>
          <%= f.button :submit %>
          <% end %>
          <%= link_to "Back", root_path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>
</div>
