<div class="main-wrapper">
  <div class="container" style="margin-top: 105px; margin-bottom: 80px; width: 1112px; background-color: white; box-shadow: 0 0.2px 0.1px">
    <div class="row">
      <div class="col-xs-12 col-sm-4 offset-4">
        <h1 style="font-size: 44px;">PROFILE UPDATE</h1>
        <div class="form" style="margin-top: 29px; margin-bottom: 29px;">
          <%= simple_form_for(@profile , defaults: { input_html: { class: 'form-control' }}) do |f| %>
          <%= f.error_notification %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :age %>
          <%= f.input :gender %>
          <%= f.input :occupation %>
          <div class="wrapper-form-button row">
            <div class="form-action col-md-3">
            <%= link_to "Back", root_path, class: 'btn btn-default' %>
            </div>
            <div class="form-action2 col-md-9">
            <%= f.button :submit %>
            </div>
          </div>
          <% end %>
          <%= link_to "Back", root_path, class: 'btn btn-default' %>
          <%= link_to "Redo Onboarding", survey_survey_response_path(@survey.id, @survey_response.id), method: :delete, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>
</div>
