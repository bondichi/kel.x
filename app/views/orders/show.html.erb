
<div class="confirmation-page-container">

    <div class="final-order-summary">
      <div class="row">
        <div class="col-md-offset-2 col-md-8">

        <h1>Your Kel-X Order is Confirmed</h1>

        <% @order.order_items.each do |item| %>
        	<h4>Item: <%= item.product.description %></h4>
        	<p>Quantity: <%= item.quantity %></p>
        	<p>Price: <%= humanized_money_with_symbol item.product.sale_price %></p>
        <% end %>

        <h3>Total: <%= humanized_money_with_symbol @order.amount %></h3>
      </div>
    </div>
  </div>

    <%= link_to "Back to Recommendations", products_path %>
</div>
